{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "commonjs",
    "lib": ["esnext"],
    "outDir": "./dist",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"],
      "app/*": ["src/app/*"],
      "controllers/*": ["src/app/controllers/*"],
      "middlewares/*": ["src/app/middlewares/*"],
      "router/*": ["src/app/router/*"],
      "assets/*": ["src/assets/*"],
      "utils/*": ["src/utils/*"],
      "webpack/*": ["webpack/*"],
      "config/*": ["config/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
  }
}
